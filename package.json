{
  "name": "restcrawler",
  "version": "0.0.1",
  "description": "restcrawler is designed to flatten interrelated REST calls into a single digestible object",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jongear/restcrawler.git"
  },
  "keywords": [
    "rest",
    "flatten",
    "http",
    "restructure"
  ],
  "author": "Jon Gear <askjon@jongear.io>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jongear/restcrawler/issues"
  },
  "homepage": "https://github.com/jongear/restcrawler#readme",
  "main": "lib/index.js",
  "files": [
    "lib",
    "README.md"
  ],
  "scripts": {
    "commit": "git-cz",
    "dev": "watch 'npm run build' src",
    "prebuild": "rimraf lib",
    "build": "tsc",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "test:coverage": "jest --coverage",
    "test:clear-cache": "jest --clearCache",
    "report-coverage": "npm run test:coverage && cat ./coverage/lcov.info | codecov",
    "validate": "npm run test:coverage",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "lint:watch": "watch 'npm run lint'"
  },
  "engines": {
    "node": "6.x",
    "npm": "3.x"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run validate"
    },
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "testURL": "http://localhost",
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts}",
      "!**/**/index.{ts}"
    ]
  },
  "dependencies": {
    "axios": "^0.18.0"
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "codecov": "^3.0.4",
    "commitizen": "^2.10.1",
    "cz-conventional-changelog": "^2.1.0",
    "ghooks": "^2.0.4",
    "jest": "^23.5.0",
    "ts-jest": "^23.1.3",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.14.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.0.1",
    "watch": "^1.0.2"
  }
}
